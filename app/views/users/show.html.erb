 <%= render 'shared/navbar'%>

<%= render partial: 'shared/user_info', locals: { user: @user } %>
<div class='bioContainer'>
  <h1> Bio </h1>
  <p> <%= @user.bio %> </p>
</div>

<% if @user == current_user %>
  <%= link_to new_user_post_path(@user), class: 'newPostButton button' do %>
    Create New Post
  <% end %>
<% end %>

<%= render partial: "shared/post", collection: @user.recent_posts %>
<%= link_to user_posts_path(@user), class: 'button' do %>
  See All People's Posts
<% end %>
