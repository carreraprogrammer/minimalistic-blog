<% if like %>
  <%= form_with(model: like, url: user_post_like_path(current_user, post), local: true, method: :delete, data: { turbo_method: :delete }) do |form| %>
    <%= form.submit "Unlike", class: "likeButton button", data: { turbo_frame: "false" } %>
  <% end %>
<% else %>
  <%= form_with(model: like, url: user_post_likes_path(current_user, post), local: true, method: :create, data: { turbo_method: :post }) do |form| %>
    <%= form.submit "Like", class: "likeButton button", data: { turbo_frame: "false" } %>
  <% end %>
<% end %>
